import React, { useState, useEffect } from 'react';

function EnhancedAddBotModalWithHealth({ isOpen, onClose, onSuccess, nodeId }) {
  const [loading, setLoading] = useState(false);
  const [currentStep, setCurrentStep] = useState(1);
  const [professions, setProfessions] = useState([]);
  const [nodeHealth, setNodeHealth] = useState(null);
  const [healthLoading, setHealthLoading] = useState(false);
  const [formData, setFormData] = useState({
    bot_name: '',
    bot_token: '',
    platform: 'telegram',
    workspace_path: '',
    model: 'anthropic/claude-sonnet-4-20250514',
    openclaw_url: '',
    display_name: '',
    description: '',
    profession: 'general',
    target_server: nodeId || 't440'
  });

  // åŠ è½½èŠ‚ç‚¹å¥åº·çŠ¶æ€å’Œä¸“ä¸šé€‰é¡¹
  useEffect(() => {
    if (isOpen && nodeId) {
      loadNodeHealth();
      loadProfessions();
    }
  }, [isOpen, nodeId]);

  const loadNodeHealth = async () => {
    setHealthLoading(true);
    try {
      const response = await fetch(`/api/nodes/${nodeId}/bot-ready`);
      const healthData = await response.json();
      setNodeHealth(healthData);
      
      if (!healthData.ready) {
        console.warn(`èŠ‚ç‚¹ ${nodeId} æœªå‡†å¤‡å°±ç»ª: ${healthData.reason}`);
      }
    } catch (error) {
      console.error('è·å–èŠ‚ç‚¹å¥åº·çŠ¶æ€å¤±è´¥:', error);
      setNodeHealth({
        ready: false,
        reason: 'æ— æ³•è·å–èŠ‚ç‚¹çŠ¶æ€',
        error: error.message
      });
    } finally {
      setHealthLoading(false);
    }
  };

  const loadProfessions = async () => {
    try {
      const response = await fetch('/api/profession-templates');
      const data = await response.json();
      setProfessions(data.professions || []);
    } catch (error) {
      console.error('åŠ è½½ä¸“ä¸šé€‰é¡¹å¤±è´¥:', error);
      setProfessions([
        { id: 'general', name: 'é€šç”¨åŠ©ç†', icon: 'ğŸ¤–', description: 'åŸºäºJoeæ¨¡æ¿çš„é€šç”¨ä¸“ä¸šåŠ©ç†' },
        { id: 'game-dev', name: 'æ¸¸æˆå¼€å‘ä¸“å®¶', icon: 'ğŸ®', description: 'Unityã€Unreal Engineã€æ¸¸æˆè®¾è®¡' },
        { id: 'data-eng', name: 'æ•°æ®å·¥ç¨‹ä¸“å®¶', icon: 'ğŸ“Š', description: 'æ•°æ®ç®¡é“ã€ETLã€å¤§æ•°æ®å¹³å°' }
      ]);
    }
  };

  const triggerHealthCheck = async () => {
    setHealthLoading(true);
    try {
      await fetch(`/api/nodes/${nodeId}/health-check`, { method: 'POST' });
      // ç­‰å¾…ä¸€ä¸‹å†é‡æ–°åŠ è½½çŠ¶æ€
      setTimeout(loadNodeHealth, 3000);
    } catch (error) {
      console.error('è§¦å‘å¥åº·æ£€æŸ¥å¤±è´¥:', error);
      setHealthLoading(false);
    }
  };

  if (!isOpen) return null;

  // èŠ‚ç‚¹å¥åº·æ£€æŸ¥è­¦å‘Š
  const renderHealthWarning = () => {
    if (healthLoading) {
      return (
        <div className="mb-4 p-4 bg-blue-900/20 border border-blue-700 rounded-lg">
          <div className="flex items-center space-x-2">
            <div className="animate-spin w-4 h-4 border-2 border-blue-400 border-t-transparent rounded-full"></div>
            <span className="text-blue-300">æ­£åœ¨æ£€æŸ¥èŠ‚ç‚¹å¥åº·çŠ¶æ€...</span>
          </div>
        </div>
      );
    }

    if (!nodeHealth) return null;

    if (!nodeHealth.ready) {
      return (
        <div className="mb-4 p-4 bg-red-900/20 border border-red-700 rounded-lg">
          <div className="flex items-center justify-between">
            <div>
              <h4 className="text-red-400 font-bold mb-2">âš ï¸ èŠ‚ç‚¹æœªå‡†å¤‡å°±ç»ª</h4>
              <p className="text-red-300 text-sm mb-2">{nodeHealth.reason}</p>
              {nodeHealth.node && (
                <div className="text-xs text-gray-400">
                  <p>èŠ‚ç‚¹: {nodeHealth.node.name}</p>
                  <p>çŠ¶æ€: {nodeHealth.node.status}</p>
                  <p>å¥åº·åˆ†æ•°: {nodeHealth.node.health_score}/100</p>
                  {nodeHealth.node.last_check && (
                    <p>ä¸Šæ¬¡æ£€æŸ¥: {new Date(nodeHealth.node.last_check).toLocaleString()}</p>
                  )}
                </div>
              )}
            </div>
            <button
              onClick={triggerHealthCheck}
              disabled={healthLoading}
              className="px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white text-sm rounded transition-colors"
            >
              ğŸ”„ é‡æ–°æ£€æŸ¥
            </button>
          </div>
          
          {nodeHealth.requirements && (
            <div className="mt-3 text-xs text-gray-400">
              <p><strong>è¦æ±‚:</strong></p>
              <ul className="ml-4 list-disc">
                <li>å¥åº·åˆ†æ•° â‰¥ {nodeHealth.requirements.min_health_score}</li>
                <li>çŠ¶æ€: {nodeHealth.requirements.required_status.join(', ')}</li>
                <li>çŠ¶æ€æ›´æ–°æ—¶é—´ â‰¤ {nodeHealth.requirements.max_age_minutes} åˆ†é’Ÿ</li>
              </ul>
            </div>
          )}
        </div>
      );
    } else {
      return (
        <div className="mb-4 p-3 bg-green-900/20 border border-green-700 rounded-lg">
          <div className="flex items-center space-x-2">
            <span className="text-green-400">âœ…</span>
            <span className="text-green-300 text-sm">èŠ‚ç‚¹å¥åº·ï¼Œå¯ä»¥åˆ›å»ºBot</span>
            {nodeHealth.node && (
              <span className="text-xs text-gray-400">
                (å¥åº·åˆ†æ•°: {nodeHealth.node.health_score}/100)
              </span>
            )}
          </div>
        </div>
      );
    }
  };

  const handleNext = () => {
    // åœ¨æ­¥éª¤1æ£€æŸ¥èŠ‚ç‚¹å¥åº·çŠ¶æ€
    if (currentStep === 1 && !nodeHealth?.ready) {
      alert('èŠ‚ç‚¹æœªå‡†å¤‡å°±ç»ªï¼Œæ— æ³•ç»§ç»­åˆ›å»ºBotã€‚è¯·ç­‰å¾…èŠ‚ç‚¹æ¢å¤å¥åº·æˆ–é€‰æ‹©å…¶ä»–èŠ‚ç‚¹ã€‚');
      return;
    }
    
    if (validateCurrentStep()) {
      setCurrentStep(prev => prev + 1);
    }
  };

  const validateCurrentStep = () => {
    switch (currentStep) {
      case 1:
        if (!formData.bot_name.trim()) {
          alert('è¯·è¾“å…¥Botåç§°');
          return false;
        }
        if (!formData.bot_name.startsWith('@')) {
          alert('Botåç§°å¿…é¡»ä»¥@å¼€å¤´');
          return false;
        }
        if (!formData.bot_token.trim()) {
          alert('è¯·è¾“å…¥Bot Token');
          return false;
        }
        if (!formData.display_name.trim()) {
          alert('è¯·è¾“å…¥æ˜¾ç¤ºåç§°');
          return false;
        }
        return true;
      case 2:
        return formData.profession !== '';
      default:
        return true;
    }
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    
    // æœ€ç»ˆå¥åº·æ£€æŸ¥
    if (!nodeHealth?.ready) {
      alert('èŠ‚ç‚¹çŠ¶æ€ä¸å¥åº·ï¼Œæ— æ³•åˆ›å»ºBotã€‚è¯·ç­‰å¾…èŠ‚ç‚¹æ¢å¤æˆ–é€‰æ‹©å…¶ä»–èŠ‚ç‚¹ã€‚');
      return;
    }
    
    setLoading(true);
    
    try {
      // ä½¿ç”¨å¢å¼ºçš„Botåˆ›å»ºAPI
      const res = await fetch('/api/create-bot-enhanced', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          ...formData,
          target_server: nodeId
        })
      });
      
      const result = await res.json();
      
      if (result.success) {
        const features = result.features ? result.features.join('\\n') : '';
        alert(`âœ… Bot ${formData.display_name} åˆ›å»ºæˆåŠŸï¼\\n\\n${result.message}\\n\\n${features}`);
        onSuccess();
        onClose();
        resetForm();
      } else {
        alert(`âŒ åˆ›å»ºå¤±è´¥: ${result.error}`);
        
        // å¦‚æœæ˜¯èŠ‚ç‚¹å¥åº·é—®é¢˜ï¼Œé‡æ–°æ£€æŸ¥èŠ‚ç‚¹çŠ¶æ€
        if (result.error.includes('èŠ‚ç‚¹') || result.error.includes('å¥åº·')) {
          loadNodeHealth();
        }
      }
    } catch (error) {
      alert(`âŒ åˆ›å»ºå¤±è´¥: ${error.message}`);
    } finally {
      setLoading(false);
    }
  };

  const resetForm = () => {
    setFormData({
      bot_name: '',
      bot_token: '',
      platform: 'telegram',
      workspace_path: '',
      model: 'anthropic/claude-sonnet-4-20250514',
      openclaw_url: '',
      display_name: '',
      description: '',
      profession: 'general',
      target_server: nodeId || 't440'
    });
    setCurrentStep(1);
    setNodeHealth(null);
  };

  const selectedProfession = professions.find(p => p.id === formData.profession);

  return (
    <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
      <div className="bg-gray-800 rounded-lg border border-gray-700 shadow-xl max-w-3xl w-full max-h-[90vh] overflow-y-auto">
        {/* Header */}
        <div className="px-6 py-4 border-b border-gray-700">
          <div className="flex justify-between items-center">
            <div>
              <h3 className="text-xl font-bold text-white">ğŸ¤– åˆ›å»ºä¸“ä¸šBot (å¢å¼ºç‰ˆ)</h3>
              <p className="text-sm text-gray-400 mt-1">åŸºäºJoeæ¨¡æ¿å¿«é€Ÿåˆ›å»ºä¸“ä¸šAIåŠ©ç†ï¼ŒåŒ…å«èŠ‚ç‚¹å¥åº·æ£€æŸ¥</p>
            </div>
            <button
              onClick={onClose}
              className="text-gray-400 hover:text-white text-2xl leading-none"
            >
              Ã—
            </button>
          </div>
          
          {/* Progress Steps */}
          <div className="mt-4 flex justify-center">
            <div className="flex items-center space-x-4">
              <div className={`flex items-center ${currentStep >= 1 ? 'text-blue-400' : 'text-gray-500'}`}>
                <div className={`w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold ${currentStep >= 1 ? 'bg-blue-600' : 'bg-gray-600'}`}>1</div>
                <span className="ml-2 text-sm">åŸºæœ¬ä¿¡æ¯</span>
              </div>
              <div className="w-8 h-px bg-gray-600"></div>
              <div className={`flex items-center ${currentStep >= 2 ? 'text-blue-400' : 'text-gray-500'}`}>
                <div className={`w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold ${currentStep >= 2 ? 'bg-blue-600' : 'bg-gray-600'}`}>2</div>
                <span className="ml-2 text-sm">ä¸“ä¸šé€‰æ‹©</span>
              </div>
              <div className="w-8 h-px bg-gray-600"></div>
              <div className={`flex items-center ${currentStep >= 3 ? 'text-blue-400' : 'text-gray-500'}`}>
                <div className={`w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold ${currentStep >= 3 ? 'bg-blue-600' : 'bg-gray-600'}`}>3</div>
                <span className="ml-2 text-sm">ç¡®è®¤åˆ›å»º</span>
              </div>
            </div>
          </div>
        </div>

        {/* èŠ‚ç‚¹å¥åº·çŠ¶æ€ */}
        <div className="px-6 pt-4">
          {renderHealthWarning()}
        </div>

        <form onSubmit={handleSubmit}>
          {/* Step 1: åŸºæœ¬ä¿¡æ¯ */}
          {currentStep === 1 && (
            <div className="p-6 space-y-4">
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium text-gray-300 mb-2">
                    Botåç§° <span className="text-red-400">*</span>
                  </label>
                  <input
                    type="text"
                    value={formData.bot_name}
                    onChange={(e) => setFormData({...formData, bot_name: e.target.value})}
                    placeholder="ä¾‹: @gamedev_expert_bot"
                    className="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium text-gray-300 mb-2">
                    æ˜¾ç¤ºåç§° <span className="text-red-400">*</span>
                  </label>
                  <input
                    type="text"
                    value={formData.display_name}
                    onChange={(e) => setFormData({...formData, display_name: e.target.value})}
                    placeholder="ä¾‹: GameDev Expert"
                    className="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    required
                  />
                </div>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-300 mb-2">
                  Bot Token <span className="text-red-400">*</span>
                </label>
                <input
                  type="password"
                  value={formData.bot_token}
                  onChange={(e) => setFormData({...formData, bot_token: e.target.value})}
                  placeholder="ä»BotFatherè·å–çš„Token"
                  className="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  required
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-300 mb-2">æè¿°</label>
                <textarea
                  value={formData.description}
                  onChange={(e) => setFormData({...formData, description: e.target.value})}
                  placeholder="ç®€çŸ­æè¿°è¿™ä¸ªBotçš„ç”¨é€”..."
                  rows="2"
                  className="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                />
              </div>

              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label className="block text-sm font-medium text-gray-300 mb-2">AIæ¨¡å‹</label>
                  <select
                    value={formData.model}
                    onChange={(e) => setFormData({...formData, model: e.target.value})}
                    className="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  >
                    <option value="anthropic/claude-sonnet-4-20250514">Claude Sonnet 4 (æ¨è)</option>
                    <option value="anthropic/claude-sonnet-4-20250514-20250514">Claude Sonnet 4.5</option>
                    <option value="anthropic/claude-haiku-4">Claude Haiku 4 (å¿«é€Ÿ)</option>
                  </select>
                </div>

                <div>
                  <label className="block text-sm font-medium text-gray-300 mb-2">å¹³å°</label>
                  <select
                    value={formData.platform}
                    onChange={(e) => setFormData({...formData, platform: e.target.value})}
                    className="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    disabled
                  >
                    <option value="telegram">Telegram</option>
                  </select>
                </div>
              </div>
            </div>
          )}

          {/* Step 2: ä¸“ä¸šé€‰æ‹© */}
          {currentStep === 2 && (
            <div className="p-6">
              <div className="mb-4">
                <h4 className="text-lg font-bold text-white mb-2">é€‰æ‹©ä¸“ä¸šæ–¹å‘</h4>
                <p className="text-sm text-gray-400">åŸºäºJoeæ¨¡æ¿ï¼Œé€‰æ‹©é€‚åˆçš„ä¸“ä¸šåŒ–æ–¹å‘</p>
              </div>
              
              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                {professions.map((profession) => (
                  <div
                    key={profession.id}
                    onClick={() => setFormData({...formData, profession: profession.id})}
                    className={`p-4 border-2 rounded-lg cursor-pointer transition-all ${
                      formData.profession === profession.id 
                        ? 'border-blue-600 bg-blue-900/20' 
                        : 'border-gray-700 hover:border-blue-500'
                    }`}
                  >
                    <div className="text-2xl mb-2">{profession.icon}</div>
                    <h3 className="font-bold text-white mb-1">{profession.name}</h3>
                    <p className="text-sm text-gray-400">{profession.description}</p>
                  </div>
                ))}
              </div>

              {selectedProfession && (
                <div className="mt-4 p-4 bg-blue-900/20 border border-blue-700 rounded-lg">
                  <h4 className="font-bold text-blue-400 mb-2">å·²é€‰æ‹©: {selectedProfession.name}</h4>
                  <p className="text-sm text-gray-300">{selectedProfession.description}</p>
                </div>
              )}
            </div>
          )}

          {/* Step 3: ç¡®è®¤åˆ›å»º */}
          {currentStep === 3 && (
            <div className="p-6">
              <div className="mb-4">
                <h4 className="text-lg font-bold text-white mb-2">ç¡®è®¤Boté…ç½®</h4>
                <p className="text-sm text-gray-400">æœ€åç¡®è®¤ä¿¡æ¯æ— è¯¯åç‚¹å‡»åˆ›å»º</p>
              </div>

              <div className="space-y-4 text-sm">
                <div className="grid grid-cols-2 gap-4">
                  <div>
                    <span className="text-gray-500">Botåç§°:</span>
                    <span className="ml-2 text-white">{formData.bot_name}</span>
                  </div>
                  <div>
                    <span className="text-gray-500">æ˜¾ç¤ºåç§°:</span>
                    <span className="ml-2 text-white">{formData.display_name}</span>
                  </div>
                </div>
                
                <div>
                  <span className="text-gray-500">ä¸“ä¸šæ–¹å‘:</span>
                  <span className="ml-2 text-white">{selectedProfession?.icon} {selectedProfession?.name}</span>
                </div>

                <div>
                  <span className="text-gray-500">AIæ¨¡å‹:</span>
                  <span className="ml-2 text-white">{formData.model}</span>
                </div>

                <div>
                  <span className="text-gray-500">æè¿°:</span>
                  <span className="ml-2 text-white">{formData.description || 'æ— æè¿°'}</span>
                </div>
              </div>

              <div className="mt-6 p-4 bg-green-900/20 border border-green-700 rounded-lg">
                <h4 className="font-bold text-green-400 mb-2">ğŸš€ åˆ›å»ºåçš„è‡ªåŠ¨åŒ–æ­¥éª¤</h4>
                <div className="text-sm text-gray-300 space-y-1">
                  <div>â€¢ èŠ‚ç‚¹å¥åº·æ£€æŸ¥é€šè¿‡</div>
                  <div>â€¢ åŸºäºJoeæ¨¡æ¿ç”Ÿæˆä¸“ä¸šåŒ–é…ç½®</div>
                  <div>â€¢ ç»§æ‰¿Joeçš„æ ¸å¿ƒæŠ€èƒ½å’Œå‘½ä»¤ç³»ç»Ÿ</div>
                  <div>â€¢ è‡ªåŠ¨éƒ¨ç½²åˆ°ç›®æ ‡æœåŠ¡å™¨</div>
                  <div>â€¢ å¯åŠ¨å¹¶éªŒè¯BotæœåŠ¡</div>
                  <div>â€¢ å†™å…¥æ•°æ®åº“å¹¶åœ¨åˆ—è¡¨ä¸­æ˜¾ç¤º</div>
                </div>
              </div>
            </div>
          )}

          {/* Footer Buttons */}
          <div className="px-6 py-4 border-t border-gray-700 flex justify-between">
            <div>
              {currentStep > 1 && (
                <button
                  type="button"
                  onClick={() => setCurrentStep(prev => prev - 1)}
                  className="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors"
                >
                  â† ä¸Šä¸€æ­¥
                </button>
              )}
            </div>

            <div className="flex space-x-3">
              <button
                type="button"
                onClick={onClose}
                className="px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded-lg transition-colors"
              >
                å–æ¶ˆ
              </button>

              {currentStep < 3 ? (
                <button
                  type="button"
                  onClick={handleNext}
                  disabled={!nodeHealth?.ready && currentStep === 1}
                  className="px-4 py-2 bg-blue-600 hover:bg-blue-700 disabled:bg-gray-600 text-white rounded-lg transition-colors"
                >
                  ä¸‹ä¸€æ­¥ â†’
                </button>
              ) : (
                <button
                  type="submit"
                  disabled={loading || !nodeHealth?.ready}
                  className="px-4 py-2 bg-green-600 hover:bg-green-700 disabled:bg-gray-600 text-white rounded-lg transition-colors"
                >
                  {loading ? 'åˆ›å»ºä¸­...' : 'ğŸš€ åˆ›å»ºBot'}
                </button>
              )}
            </div>
          </div>
        </form>
      </div>
    </div>
  );
}

export default EnhancedAddBotModalWithHealth;